<?xml version="1.0" encoding="UTF-8"?>
<project name="Publish p2 metadata" default="main">
	<property name="p2.build.repo" value="file:${buildDirectory}/buildRepo"/>
	<property name="assemblyTempDir" value="${buildDirectory}/tmp"/>
	<property name="jarProcessor.sign" value="false"/>
	<available property="customAssembly" file="${builder}/customAssembly.xml" value="${builder}/customAssembly.xml"/>
	<property name="p2.mirror.raw" value="false"/>
	<property name="p2.mirror.slicing.filter" value=""/>
	<property name="p2.mirror.slicing.followOnlyFilteredRequirements" value="false"/>
	<property name="p2.mirror.slicing.followStrict" value="false"/>
	<property name="p2.mirror.slicing.includeFeatures" value="true"/>
	<property name="p2.mirror.slicing.includeNonGreedy" value="false"/>
	<property name="p2.mirror.slicing.includeOptional" value="false"/>
	<property name="p2.mirror.slicing.latestVersionOnly" value="false"/>
	<property name="p2.mirror.slicing.platformFilter" value=""/>

	<macrodef name="customGather">
		<attribute name="dir" />
		<attribute name="propertyName" />
		<attribute name="propertyValue" />
		<attribute name="subFolder" />
		<attribute name="projectName" />
		<sequential>
			<ant antfile="build.xml" dir="@{dir}" target="publish.bin.parts">
				<property name="@{propertyName}" value="@{propertyValue}"/>
			</ant>
			<antcall target="customAssembly">
				<param name="projectLocation" value="${basedir}/@{dir}"/>
				<param name="projectName" value="@{projectName}"/>
				<param name="@{propertyName}" value="@{propertyValue}"/>
				<param name="target.folder" value="@{propertyValue}@{subFolder}"/>
				<param name="customTarget" value="gather.bin.parts"/>
			</antcall>
		</sequential>
	</macrodef>

	<target name="main">
		<antcall target="gather.bin.parts"/>
		<antcall target="customAssembly">
			<param name="customTarget" value="post.gather.bin.parts"/>
		</antcall>


		<antcall target="generate.p2.metadata"/>
	</target>

	<target name="gather.bin.parts">
		<customGather dir="..\..\src\doc\spec" projectName="cleon.doc.spec.builtin_0.0.1.201602290942" propertyName="destination.temp.folder" propertyValue="${eclipse.plugins}" subFolder="" />
		<customGather dir="..\..\src\doc\template\asciidoc" projectName="cleon.doc.template.asciidoc.builtin_0.0.1.201602290942" propertyName="destination.temp.folder" propertyValue="${eclipse.plugins}" subFolder="" />
		<customGather dir="..\..\src\arc42\spec" projectName="cleon.arc42.spec.builtin_0.0.1.201602290942" propertyName="destination.temp.folder" propertyValue="${eclipse.plugins}" subFolder="" />
		<customGather dir="..\..\src\sda\spec" projectName="cleon.sda.spec.builtin_0.0.1.201602290942" propertyName="destination.temp.folder" propertyValue="${eclipse.plugins}" subFolder="" />
		<customGather dir="..\..\src\sda\template\asciidoc" projectName="cleon.sda.template.asciidoc.builtin_0.0.1.201602290942" propertyName="destination.temp.folder" propertyValue="${eclipse.plugins}" subFolder="" />
		<customGather dir="..\..\src\sdp\spec" projectName="cleon.sdp.spec.builtin_0.0.1.201602290942" propertyName="destination.temp.folder" propertyValue="${eclipse.plugins}" subFolder="" />
		<customGather dir="..\..\src\uml\spec" projectName="cleon.uml.spec.builtin_0.0.1.201602290942" propertyName="destination.temp.folder" propertyValue="${eclipse.plugins}" subFolder="" />
		<customGather dir="..\..\src\uml\template\asciidoc" projectName="cleon.uml.template.asciidoc.builtin_0.0.1.201602290942" propertyName="destination.temp.folder" propertyValue="${eclipse.plugins}" subFolder="" />
		<customGather dir="..\..\src\bpmn\spec" projectName="cleon.bpmn.spec.builtin_0.0.1.201602290942" propertyName="destination.temp.folder" propertyValue="${eclipse.plugins}" subFolder="" />
		<customGather dir="..\..\src\xml\spec" projectName="cleon.xml.spec.builtin_0.0.1.201602290942" propertyName="destination.temp.folder" propertyValue="${eclipse.plugins}" subFolder="" />
		<customGather dir="..\..\src\sda\template\xml" projectName="cleon.sda.template.xml.builtin_0.0.1.201602290942" propertyName="destination.temp.folder" propertyValue="${eclipse.plugins}" subFolder="" />
		<customGather dir="..\..\src\testing\spec" projectName="cleon.testing.spec.builtin_0.0.1.201602290942" propertyName="destination.temp.folder" propertyValue="${eclipse.plugins}" subFolder="" />
		<customGather dir="..\..\src\testing\template\asciidoc" projectName="cleon.testing.template.asciidoc.builtin_0.0.1.201602290942" propertyName="destination.temp.folder" propertyValue="${eclipse.plugins}" subFolder="" />
		<customGather dir="..\..\src\resources\spec" projectName="cleon.resources.spec.builtin_0.0.1.201602290942" propertyName="destination.temp.folder" propertyValue="${eclipse.plugins}" subFolder="" />
		<customGather dir="" projectName="cleon.feature_1.0.0.201602290942" propertyName="feature.base" propertyValue="${eclipse.base}" subFolder="/features" />
		<eclipse.publish.featuresAndBundles repository="${p2.build.repo}" site="${p2.category.site}" category="${p2.category.definition}" siteQualifier="${p2.category.prefix}" categoryVersion="${p2.category.version}">
			<contextRepository metadata="true" location="file:/C:/tools/eclipse-standard-luna-4.4/p2/org.eclipse.equinox.p2.engine/profileRegistry/epp.package.standard.profile/"			/>
			<contextRepository metadata="true" location="file:/C:/tools/eclipse-standard-luna-4.4/configuration/org.eclipse.osgi/130/data/listener_1925729951/"			/>
		</eclipse.publish.featuresAndBundles>
	</target>

	<target name="customAssembly" if="customAssembly">
		<ant antfile="${customAssembly}" target="${customTarget}" inheritAll="true"/>
	</target>

	<target name="sign.p2.repository">
	</target>

	<target name="generate.p2.metadata">
		<property name="p2.flavor" value="tooling"/>
		<delete dir="${assemblyTempDir}/p2.branding"/>


	</target>
</project>
